<div class="container" style="background: #505868; min-height: 250px">
<%= form_for(@note, :html => { :multipart => true }) do |f| %>
   <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, id: :tweet_text, class: "form-control"%>
  </div>

   <%= f.fields_for :note_attachments do |p| %>
     <div class="field">

       <%= p.file_field :avatar, :multiple => true, name: "note_attachments[avatar][]" %>
     </div>
   <% end %>
  <%= f.submit %>
<% end %>
</div>
