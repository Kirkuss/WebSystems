
<h2 style="background: #3a3b4c; color: white;" >  Log in </h2>
<div class="container" style="background: #505868; min-height: 250px">
<%= form_tag("/login", method: "post") do %>
 <div class="form-group">
 <%= label_tag :username %>
 <%= text_field_tag :username, params[:username], class: "form-control"%>
 </div>
 <div class="form-group">
 <%= label_tag :password %>
 <%= password_field_tag :password, params[:password], class: "form-control" %>
 </div>
 <button type="submit" class="btn btn-primary">Submit</button>
<% end %>

</div>


