<div class="container" style="background: #505868; min-height: 250px">
<%= form_with(model: user, local: true) do |form| %>
 
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password, class: "form-control"  %>
  </div>

   <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
</div>
<br>